<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.home.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerTimetableController</servlet-name>
        <servlet-class>lecturer.TimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerAttController</servlet-name>
        <servlet-class>lecturer.AttController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttStatusController</servlet-name>
        <servlet-class>lecturer.AttStatusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTimtableController</servlet-name>
        <servlet-class>student.TimtableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAttController</servlet-name>
        <servlet-class>admin.EditAttController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityDetailsController</servlet-name>
        <servlet-class>student.ActivityDetailsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/lecturer/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerTimetableController</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerAttController</servlet-name>
        <url-pattern>/lecturer/takeatt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttStatusController</servlet-name>
        <url-pattern>/lecturer/attstatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTimtableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAttController</servlet-name>
        <url-pattern>/admin/editatts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityDetailsController</servlet-name>
        <url-pattern>/student/activitydetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
